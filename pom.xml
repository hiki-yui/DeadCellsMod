    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <mod.name>deadCellsMod</mod.name>
</properties>

<dependencies>
    <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.11</version>
        <scope>test</scope>
    </dependency>

    <dependency>
        <groupId>basemod</groupId>
        <artifactId>BaseMod</artifactId>
        <version>5.33.1</version>
        <scope>system</scope>
        <!--../${basedir}/src/main/resources/libs/BaseMod.jar-->
        <systemPath>${basedir}/../libs/BaseMod.jar</systemPath>
    </dependency>

    <dependency>
        <groupId>desktop</groupId>
        <artifactId>desktop</artifactId>
        <version>1.0</version>
        <scope>system</scope>
        <systemPath>${basedir}/../libs/desktop-1.0.jar</systemPath>
