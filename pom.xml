        <version>1.0</version>
        <scope>system</scope>
        <systemPath>${basedir}/../libs/mod-uploader.jar</systemPath>
    </dependency>

    <dependency>
        <groupId>ModTheSpire</groupId>
        <artifactId>ModTheSpire</artifactId>
        <version>3.16.0</version>
        <scope>system</scope>
        <systemPath>${basedir}/../libs/ModTheSpire.jar</systemPath>
    </dependency>

    <dependency>
        <groupId>StSLib</groupId>
        <artifactId>StSLib</artifactId>
        <version>1.23.0</version>
        <scope>system</scope>
        <systemPath>${basedir}/../libs/StSLib.jar</systemPath>
    </dependency>

    <dependency>
        <groupId>mts-launcher</groupId>
        <artifactId>mts-launcher</artifactId>
        <version>1.0</version>
        <scope>system</scope>
        <systemPath>${basedir}/../libs/mts-launcher.jar</systemPath>
    </dependency>
</dependencies>


    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
